<header>
    <nav>
        <div class="nav-wrapper">
            <a href="/" class="brand-logo">Backcountry Buddy</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="/mountains">Mountains</a></li>
                <li><a href="/users">Users</a></li>
            </ul>
        </div>
    </nav>
</header>

<h3>Backcountry Legends</h3>

<h5>Join the community and <span class='holder hoverable'><a class='nav' href="/users/new">Start Exploring</a></span> </h5>

<br><br><br> 

{{#each users}}
<div class='row'>
    <div class='col s5 z-depth-1'>
        <div class='row'>
            <div class='col s5'>
                <img class='circle responsive-img' src="{{this.img}}" alt="pic">
            </div>
            <div class='col s6'>
                <div class='holder hoverable'>
                    <a class='nav' href="/users/{{this._id}}">
                        <h5>{{this.name}}</h5>
                    </a>
                </div>
                <h6>{{this.hometown}}</h6>
                <h6>Favorite Mountain - {{this.favoriteMountain}}</h6>
            </div>
        </div>
    </div>
</div>
{{/each}}